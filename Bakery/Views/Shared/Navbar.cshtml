@using System.Security.Claims

<div class="navbar">
  <p class="nav-button">@Html.ActionLink("Home", "Index", "Home")</p>
  <p class="nav-button">@Html.ActionLink("See all Treats", "Index", "Treats")</p>
  <p class="nav-button">@Html.ActionLink("See all Flavors", "Index", "Flavors")</p>
  @if (User.Identity.IsAuthenticated)
  {
    <div>
      <p>Hello @User.Identity.Name!</p>
      @using (Html.BeginForm("LogOff", "Account"))
      {
          <input class="navbar-logoff" type="submit" class="btn btn-default" value="Log out" />
      }
    </div>
  }
  else
  {
    <div class="nav-button-group">
      <p class="nav-button">@Html.ActionLink("Register", "Register", "Account")</p>
      <p class="nav-button">@Html.ActionLink("Log in", "Login", "Account")</p>
    </div>
  }
</div>