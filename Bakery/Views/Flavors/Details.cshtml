@{
  Layout = "_Layout";
}
@using Bakery.Models;
@model Bakery.Models.Flavor
<h1>Flavor Detial</h1>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
@if(@Model.JoinEntities.Count == 0)
{
  <p>No treats have this flavor</p>
}
else
{
  <h4>Treats that have this flavor</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Treat.Name</li>
    @using (Html.BeginForm("DeleteTreat", "Flavors"))
    {
      @Html.Hidden("joinId", @join.FlavorTreatId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
}
<p class="button">@Html.ActionLink("Add a Treat", "AddTreat", new {id = Model.FlavorId})</p>
<p class="button">@Html.ActionLink("Create a new Treat", "Create", "Treats", new {id = Model.FlavorId})</p>
<p class="button">@Html.ActionLink("Back to all Flavors", "Index")</p>
<p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>
