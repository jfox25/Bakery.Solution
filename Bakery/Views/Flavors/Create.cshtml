@{
  Layout = "_Layout";
}

@model Bakery.Models.Flavor

<h4>Add a new flavor</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @if(ViewBag.Id == 0)
  {
    @Html.Label("Select treat")
    @Html.DropDownList("TreatId")
  }
  else
  {
    <label for="TreatId">@ViewBag.Treat.Name</label>
    <select id="TreatId" name="TreatId">
      <option value="@ViewBag.Treat.TreatId">@ViewBag.Treat.Name</option>
    </select>
  }

  <input type="submit" value="Add new flavor" class="btn btn-default" />
}
<p class="button">@Html.ActionLink("Back to all Flavors", "Index")</p>